<!DOCTYPE html>
%= t html => begin
  %= t head => begin
    %= t meta => (charset => 'utf-8')
    %= t 'title' => title
    %= stylesheet '/css/slovo-min.css'
    %= stylesheet '/css/upravlenie.css'
    %= javascript '/mojo/jquery/jquery.js'
    %= javascript '/js/trumbowyg-2.10/trumbowyg.min.js'
    %= javascript '/js/trumbowyg-2.10/plugins/base64/trumbowyg.base64.min.js'
    %= javascript '/js/trumbowyg-2.10/langs/bg.min.js'
    %= stylesheet '/js/trumbowyg-2.10/ui/trumbowyg.min.css'
  % end
  %= t body => begin
    <header class="mui-appbar mui--z1">
      <table>
        <tbody><tr class="mui--align-middle">
          <td class="mui--text-title">
    %= link_to '/' => sub{ t img => id=> "logo", src=>"/img/slovo-white.png" }
    |
    %= link_to 'perldoc' => 'perldoc' =>(target => '_blank')
    |
    %= link_to '/Ꙋправленѥ' => 'under_management'
          </td>
          <td class="mui--text-right">
    %= t span => (class => 'field-with-error') => flash('message')
    % if ($c->is_user_authenticated) {
        % my $name = $c->user->{first_name} . ' ' . $c->user->{last_name};
        %= link_to ' Изходъ '.$name => 'sign_out'
    % }
          </td>
        </tr>
      </tbody></table>
    </header>
    <div class="mui-container-fluid">
    %= content
    </div>
  % end
% end
